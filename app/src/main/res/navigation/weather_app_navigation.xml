<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/mainActivity">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.riantono.weather.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" >
        <action android:id="@+id/goToSettingAction"
            app:destination="@+id/settingActivity"/>
    </activity>
    <activity
        android:id="@+id/settingActivity"
        android:name="com.riantono.weather.SettingActivity"
        android:label="activity_setting"
        tools:layout="@layout/activity_setting" />
</navigation>